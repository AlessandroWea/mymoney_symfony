{% extends 'base.html.twig' %}

{% block title %}{{ title }}!{% endblock %}

{% block body %}
<div class="container d-flex flex-column mt-2">
    <h1 class="text-center">{{ title }}</h1>
    {{ form_start(form) }}
        <div class="form-group" >
            {{ form_errors(form.name) }}
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class' : 'form-control fs-1-5'}}) }}
        </div>
        <div class="form-group" >
            {{ form_errors(form.value) }}
            {{ form_label(form.value) }}
            {{ form_widget(form.value, {'attr': {'class' : 'form-control fs-1-5'}}) }}
        </div>

        <a href="/wallet" class="btn btn-danger">Back!</a>
        <button type="submit" class="btn btn-primary">Edit!</button>
    {{ form_end(form) }}
</div>

{% endblock %}
